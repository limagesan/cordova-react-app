<?xml version='1.0' encoding='utf-8'?>
<widget id="limagesan.cordova-react-app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CordovaReactApp</name>
    <description>
        A sample react application on the Apache Cordova.
    </description>
    <author email="limagesan@gmail.com">
        Limagesan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <engine name="ios" spec="^4.5.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
